@using TaskManagement.UI.Models

@model AppTaskUpdateVM
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "İş Emri Detay Ekranı";
}

<form asp-action="Update" asp-controller="AppTask" asp-area="Admin" class="mt-3" method="post">


    <div class="mb-3">
        <label class="form-label"> iş Emri Başlığı :</label>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label"> iş Emri Açıklaması :</label>
        <textarea asp-for="Description" class="form-control">  </textarea>

    </div>

    <div class="mb-3">
        <label class="form-label">Öncelik :</label>
        <select class="form-control" asp-for="PriorityId" asp-items="@Model.Priorities">
            <option value="" selected disabled hidden>Lütfen seçiniz</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Görevli Personel :</label>

        <select class="form-control" asp-for="AppUserId" asp-items="@Model.Users">
            <option value="" selected disabled hidden>Lütfen seçiniz</option>
        </select>
    </div>


    <div class="form-floating mb-3 btn-lg d-grid gap-2">

        <button asp-action="Update" asp-controller="AppTask" asp-area="Admin" class="btn btn-info" type="submit">Kaydet </button>
        <a asp-action="Index" asp-controller="AppTask" asp-area="Admin" class="btn btn-secondary" type="submit">Vazgeç </a>

    </div>



    <div asp-validation-summary="All" class="text-bg-danger lead">
    </div>


</form>

@await Component.InvokeAsync("TaskReports", new { appTaskId = Model.Id })