@model ProfileDataVM
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Profil Ekranı";
}

<form asp-action="ProfileData" asp-controller="User" class="mt-3" method="post">
    <div class="mb-3">
        <label class="form-label"> Ad :</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label"> Soyad :</label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Email">Email :</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Password">Password :</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ConfirmPassword"> Confirm Password :</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder=" confirm password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    

    <div class="form-floating mb-3 btn-lg d-grid gap-2">
        <button class="btn btn-info" type="submit">Güncelle </button>
        
    </div>

    <div asp-validation-summary="All" class="text-bg-danger lead"></div>
</form>

