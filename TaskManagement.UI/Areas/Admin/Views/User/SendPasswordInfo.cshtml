@using TaskManagement.UI.Models
@model string
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Şifre Sıfırlama Mail Ekranı";
    var username = Model ?? "ilgili kullanıcı";
}

<section class="container" style="max-width:640px;margin:48px auto;padding:24px;">
    <div style="
        background:#ffffff;
        border:1px solid #e5e7eb;
        border-radius:16px;
        padding:32px;
        box-shadow:0 4px 16px rgba(0,0,0,0.06);
        text-align:center;
        font-family:system-ui, -apple-system, 'Segoe UI', Roboto, Arial, 'Helvetica Neue', sans-serif;
        color:#111827;">

        <!-- Başlık + ikon -->
        <div aria-hidden="true" style="
            width:56px;height:56px;margin:0 auto 12px auto;
            border-radius:50%;background:#ecfdf5;border:1px solid #10b98122;
            display:flex;align-items:center;justify-content:center;">
            <span style="font-size:28px;line-height:1;">✓</span>
        </div>

        <h1 style="font-size:24px; font-weight:700; margin:0 0 12px 0;">
            Bağlantı gönderildi
        </h1>

        <p style="font-size:16px; line-height:1.6; margin:0 0 8px 0;">
            <strong>@username</strong> kullanıcısının ilgili mail hesabına
            <strong>şifre sıfırlama bağlantısı</strong> gönderilmiştir.
        </p>

        <p style="font-size:14px; color:#6b7280; line-height:1.6; margin:0 0 24px 0;">
            Lütfen gelen kutunuzu ve spam / önemsiz klasörünü kontrol edin.
            Birkaç dakika içinde e-posta gelmezse, yeniden deneyebilirsiniz.
        </p>

        <!-- Aksiyon butonları -->
        <div class="d-flex justify-content-center flex-wrap gap-2">
            <!-- Ana Sayfa Butonu -->
            <a asp-action="Index"  asp-controller="User"   class="btn btn-outline-secondary"        style="border-radius:10px;">     Ana sayfaya dön      </a>

            <!-- Yeni bağlantı iste -->
            <form method="post">
               @Html.AntiForgeryToken()
                            <button asp-area="Admin" asp-controller="User" asp-action="SendPasswordReset"
                        asp-route-id="@username" type="submit" class="btn btn-primary btn-sm">
                    Yeni bağlantı iste
                </button>
                </form>
            
        </div>

        <!-- Küçük ipucu -->
        <div role="note" aria-label="Bilgi" style="margin-top:20px; font-size:12px; color:#6b7280;">
            E-posta doğrulam
