@model UpdateUserVM
@{
    Layout = "_MemberLayout";
    ViewBag.Title = "Kullanıcı Güncelleme Ekranı";
}

<form asp-action="Update" asp-controller="User" asp-area="Member" class="mt-3" method="post">
    <div class="mb-3">
        <label class="form-label"> Ad :</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label"> Soyad :</label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Email">Email :</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

  

    <div class="mb-3">
        <label class="form-label">Rol :</label>
        <select class="form-control" asp-for="RoleId" asp-items="Model.Roles">
        </select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3 btn-lg d-grid gap-2">
        <button class="btn btn-info" type="submit">Kaydet </button>
        <a asp-action="Index" asp-controller="User" asp-area="Member" class="btn btn-secondary">Vazgeç </a>
    </div>

    <div asp-validation-summary="All" class="text-bg-danger lead"></div>
</form>

