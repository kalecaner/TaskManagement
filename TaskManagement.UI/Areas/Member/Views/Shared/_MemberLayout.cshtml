<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/theme/assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/theme/css/styles.css" rel="stylesheet" />
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">Start Bootstrap</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewBag.Title == "Dashboard" ? "active" : "")" asp-action="Index" asp-controller="Home"> Dashboard</a>                
                <a class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewBag.Title == "İş Emri Görüntüleme Ekranı" ? "active" : "")" asp-action="Index" asp-area="Member" asp-controller="AppTask">İş Emirleri</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewBag.Title == "Bildirim Ekranı" ? "active" : "")" asp-action="Index" asp-area="Member" asp-controller="Notification">Bildirimler</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewBag.Title == "Profil Ekranı Ekranı" ? "active" : "")" asp-action="ProfileData" asp-area="Member" asp-controller="User">Profil</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-action="Logout" asp-area="" asp-controller="Account">Çıkış Yap</a>
            </div>
        </div>
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle"> Menü</button>
                   
                   
                </div>
            </nav>
            <!-- Page content-->
            <div class="container mt-4">
               @RenderBody()
                
            </div>
        </div>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/theme/js/scripts.js"></script>
</body>
</html>
