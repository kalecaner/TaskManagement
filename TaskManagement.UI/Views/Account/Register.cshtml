@model RegisterRequest
@{
    Layout = null;
}
<html>
<head>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />



</head>
<body>
    <div class="container">
        <div class="card p-5 mt-5 w-75 mx-auto shadow">
            <div class="text-center">
                <h1 class="h3 mb-3 fw-normal">Personel Yönetim Sistemi</h1>
                <p class="lead"> <i> Kayıt Ekranı</i></p>


            </div>
            <form asp-action="Register" asp-controller="Account" asp-area="" class="form-floating mt-3" method="post">

                  <div class="form-floating mt-3">

                    <input type="text" class="form-control" asp-for="Name" placeholder="Name" />
                    <label asp-for="Name">Name</label>



                </div>
                <div class="form-floating mt-3">

                    <input type="text" class="form-control" asp-for="Surname" placeholder="Surname" />
                    <label asp-for="Surname">Surname</label>



                </div>
                <div class="form-floating mt-3">

                    <input type="text" class="form-control" asp-for="Username" placeholder="Username" />
                    <label asp-for="Username">Username</label>



                </div>
                <div class="form-floating mt-3">

                    <input type="email" class="form-control" asp-for="Email" placeholder="Email" />
                    <label asp-for="Email">Email</label>



                </div>


                <div class="form-floating mb-3">

                    <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                    <label asp-for="Password">Password</label>

                </div>
                <div class="form-floating mb-3">

                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Password Again" />
                    <label asp-for="ConfirmPassword">Password Again</label>

                </div>

                <div class="form-floating mb-3 btn-lg d-grid gap-2">

                    <button class="btn btn-info" type="submit">  Kayıt Ol                 </button>
                    <a asp-action="Login" asp-controller="Account" class="btn btn-primary" > Giriş Ekranına Geri Dön                </a>

                </div>

        

        <div asp-validation-summary="All" class="text-bg-danger lead">
        </div>


            </form>

        </div>



    </div>

</body>
</html>
