@model ResetPasswordVM
@{
    ViewData["Title"] = "Şifre Sıfırlama";
}

<section class="container" style="max-width:480px;margin:80px auto;padding:32px;">
    <div style="
        background:#ffffff;
        border:1px solid #e5e7eb;
        border-radius:16px;
        padding:40px;
        box-shadow:0 4px 16px rgba(0,0,0,0.06);
        font-family:system-ui, -apple-system, 'Segoe UI', Roboto, Arial, sans-serif;
        color:#111827;
    ">
        <h2 style="text-align:center;margin-bottom:24px;">🔒 Şifre Sıfırlama</h2>

        @if (ViewBag.Message != null)
        {
            <div style="
                    background:@(ViewBag.Message.Contains("başarı") ? "#dcfce7" : "#fee2e2");
                    color:@(ViewBag.Message.Contains("başarı") ? "#166534" : "#991b1b");
                    padding:12px 16px;
                    border-radius:8px;
                    text-align:center;
                    margin-bottom:24px;
                    border:1px solid rgba(0,0,0,0.05);
                ">
                @ViewBag.Message
            </div>
        }

        <form asp-action="ResetPassword" asp-controller="Account" method="post" style="display:flex;flex-direction:column;gap:16px;">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Token" />

            <div>
                <label for="NewPassword" style="font-weight:600;">Yeni Şifre</label>
                <input asp-for="NewPassword" type="password" id="newPassword" placeholder="Yeni şifrenizi girin"
                       style="
                           width:100%;
                           padding:10px 12px;
                           border:1px solid #d1d5db;
                           border-radius:8px;
                           margin-top:6px;
                           font-size:15px;
                       " required />
                <span asp-validation-for="NewPassword" style="color:#dc2626;font-size:13px;"></span>
            </div>

            <button type="submit" onclick="togglePassword()"
                    style="
                        background-color:#2563eb;
                        color:white;
                        font-weight:600;
                        padding:12px;
                        border:none;
                        border-radius:8px;
                        cursor:pointer;
                        transition:background-color .2s;
                    "
                    onmouseover="this.style.backgroundColor='#1d4ed8'"
                    onmouseout="this.style.backgroundColor='#2563eb'">
                Şifreyi Güncelle
            </button>

            <div style="text-align:center;margin-top:12px;font-size:14px;color:#6b7280;">
                Şifrenizi sıfırladıktan sonra giriş sayfasına dönebilirsiniz.
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    function togglePassword() {
      const input = document.getElementById('newPassword');
      input.type = input.type === 'password' ? 'text' : 'password';
    }
</script>