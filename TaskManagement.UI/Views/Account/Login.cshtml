@model LoginRequest
@{
    Layout = null;
}
<html>
<head>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    @* Font
--------------------------------
    *@
   
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200..1000;1,200..1000&family=Source+Sans+3:ital,wght@0,200..900;1,200..900&family=Yellowtail&display=swap" rel="stylesheet">

    <style>
         body {
            font-family: "Mulish", sans-serif;
            font-optical-sizing: auto;
            font-weight: 400;
            font-style: normal;
        

        }

    </style>
    @* 
--------------------------------
    *@

</head>
<body>
    <div class="container">
        <div class="card p-5 mt-5 w-75 mx-auto shadow">
            <div class="text-center">
                <h1 class="h3 mb-3 fw-normal">Personel Yönetim Sistemi</h1>
                <p class="lead"> <i> Giriş Ekranı</i></p>


            </div>
            <form  asp-action="Login" asp-controller="Account" asp-area="" class=" form-floating mt-3" method="post">

                <div class="form-floating mt-3">
                    
                    <input type="text" class="form-control" asp-for="Username" placeholder="Username" />
                    <label for="username">Username</label>



                </div>

                <div  class="form-floating mb-3" >
                   
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                    <label for="password">Password</label>

                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" checked="@Model.RememberMe" asp-for="RememberMe" id="RememberMe">
                    <label class="form-check-label" for="RememberMe">
                       Beni Hatırla
                    </label>
                </div>

                <div class="form-floating mb-3 btn-lg d-grid gap-2">

                    <button class="btn btn-primary" type="submit" >Giriş Yap  </button>

                    <a asp-action="Register"  asp-controller="Account" class="btn btn-info" >Kayıt Ol </a>

                </div>

                <div asp-validation-summary="All" class="text-bg-danger lead">

                </div>


            </form>

        </div>
     


    </div>

</body>
</html>
